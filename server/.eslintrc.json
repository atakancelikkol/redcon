{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base",
    "plugin:jest/recommended",
    "plugin:jest-formatting/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "jest",
    "jest-formatting"
  ],
  "rules": {
    "linebreak-style": [ // fixable
      "error",
      "unix"
    ],
    "no-console": "off",
    "max-len": "off",
    "object-curly-newline": [ // fixable
      "warn",
      {"minProperties": 2}
    ],
    "class-methods-use-this": "off", // non-fixable
    "global-require": "warn", // non-fixable
    "no-param-reassign": "warn", // non-fixable
    "no-restricted-globals": "warn", // non-fixable
    "no-undef": "warn", // non-fixable
    "no-unused-vars": "warn", // non-fixable
    "no-use-before-define": "warn" // non-fixable
  }
}