{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-console": "error",
    "prefer-rest-params": "off",
    "max-len": "off",
    "class-methods-use-this": "off", // non-fixable
    "global-require": "warn", // non-fixable
    "no-param-reassign": "warn", // non-fixable
    "no-restricted-globals": "warn", // non-fixable
    "no-undef": "warn", // non-fixable
    "no-unused-vars": "warn", // non-fixable
    "no-use-before-define": "warn" // non-fixable
  }
}